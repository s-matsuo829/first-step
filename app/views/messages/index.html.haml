%body
  .title
    .title__content 書きなぐり
  .header
    .header__left-box
      .header__left-box__user-name
        = "お疲れ様です。" + current_user.name + "さま"
    = link_to edit_user_path(current_user) do
      .header__edit-btn Edit
  .wrapper
    .messages
      = render @messages
      -# - @messages.each do |message|
        -# = render partial: "message", locals: { message: message }
  .form
    = form_for (@message), html: {class: "new_message"} do |f|
      .input-box
        = f.text_field :content, placeholder: "今日はどうしたの？", class: "input-box__text"
        %label(class="input-box__image" for="message_image")
          %i.fa.fa-image
          = f.file_field :image, class: "input-box__image__file", id: "message_image"
      = f.submit "Send", class: "submit-btn"